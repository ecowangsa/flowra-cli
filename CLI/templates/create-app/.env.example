# Auto-generated by `flowra env:example`

# Human readable application name
APP_NAME=Flowra

# Runtime environment (development, staging, production)
APP_ENV=development

# Enable verbose logging (true/false)
APP_DEBUG=true

# Base URL used by outbound links
APP_URL=http://localhost:3387

# HTTP server port
APP_PORT=3387

# Default application timezone
APP_TIMEZONE=Asia/Jakarta

# Logger severity threshold
LOG_LEVEL=info

# Comma separated list of allowed origins
CORS_ORIGIN=*

# Secret for signing sessions
SESSION_SECRET=

# Primary database (MySQL)
DB_MYSQL_HOST_PRIMARY=127.0.0.1
DB_MYSQL_PORT_PRIMARY=3306

# Optional read/standby database (MySQL)
DB_MYSQL_HOST_READONLY=
DB_MYSQL_PORT_READONLY=
DB_MYSQL_HOST_STANDBY=
DB_MYSQL_PORT_STANDBY=

# Default database credentials
DB_DEFAULT_USERNAME=root
DB_DEFAULT_PASSWORD=
DB_DEFAULT_DATABASE=flowra

# Fallback host/port if primary is not set
DB_MYSQL_HOST=127.0.0.1
DB_MYSQL_PORT=3306

# Enable TLS/SSL for database connection
DB_MYSQL_SSL=false
DB_MYSQL_SSL_CA=

# Use local socket when running on host (false = local socket on Linux)
DB_REMOTE_CLOUD=false

# Cache server connection string
CACHE_URL=

# Queue server connection string
QUEUE_URL=
